package br.com.ieoafestasedecoracoes.partymanager.companyservice.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import br.com.ieoafestasedecoracoes.partymanager.companyservice.repository.CompanyRepository;
import br.com.ieoafestasedecoracoes.partymanager.companyservice.to.CompanyTO;

@Service
public class CompanyService {

	@Autowired
	private CompanyRepository repository;
	
	public CompanyTO findById(Integer id) {
		return new CompanyTO(repository.findById(id).orElse(null));
	}
	
}
