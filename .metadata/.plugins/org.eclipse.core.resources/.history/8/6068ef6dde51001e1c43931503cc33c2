package br.com.ieoafestasedecoracoes.partymanager.companyservice.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import br.com.ieoafestasedecoracoes.partymanager.companyservice.domain.Company;
import br.com.ieoafestasedecoracoes.partymanager.companyservice.repository.CompanyRepository;
import br.com.ieoafestasedecoracoes.partymanager.companyservice.to.CompanyTO;

@Service
public class CompanyService {

	@Autowired
	private CompanyRepository repository;
	
	public CompanyTO findById(Integer id) {
		return new CompanyTO(repository.findById(id).orElse(null));
	}
	
	public List<CompanyTO> findAll() {
		return CompanyTO.fromCompanyList(repository.findAll());
	} 
	
	public void delete(Integer id) {
		repository.deleteById(id);
	}
	
	public CompanyTO create(CompanyTO companyTO) {
		Company company = new Company(companyTO);
		company.setId(null);
		repository.save(company);
		companyTO.setId(company.getId());
		return companyTO;
	}
	
	public CompanyTO update(CompanyTO companyTO) {
		Optional<Company> company = repository.findById(companyTO.getId());
		if(company.isEmpty()) {
			throw new RuntimeException("Company does not exist to be updated");
		}
		
		
	}
	
}
