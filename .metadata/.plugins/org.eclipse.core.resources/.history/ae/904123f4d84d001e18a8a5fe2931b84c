package br.com.ieoafestasedecoracoes.partymanager.clientservice.to;

import java.util.List;

import br.com.ieoafestasedecoracoes.partymanager.clientservice.domain.Client;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@AllArgsConstructor
@NoArgsConstructor
public class ClientTO {

	private Integer id;

	private String document;
	private String firstName;
	private String lastName;
	private String tipo;
	
	public ClientTO(Client client) {
		this.document = client.getDocument();
		this.firstName = client.getFirstName();
		this.lastName = client.getLastName();	
		this.tipo = client.getTipo();
	}
	
	public static List<ClientTO> fromClientList(List<Client> list) {
		return list.stream().map(ClientTO::new).toList();
	}
}
