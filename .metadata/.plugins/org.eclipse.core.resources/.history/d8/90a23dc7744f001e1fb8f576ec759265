package br.com.ieoafestasedecoracoes.partymanager.clientservice.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import br.com.ieoafestasedecoracoes.partymanager.clientservice.domain.Client;
import br.com.ieoafestasedecoracoes.partymanager.clientservice.repository.ClientRepository;

@Service
public class ClientService {

	@Autowired
	private ClientRepository repository;
	
	public Client findById(Integer id) {
		return repository.findById(id).orElse(null);
	}
	
	public List<Client> findAll() {
		return repository.findAll();
	}
	
}
