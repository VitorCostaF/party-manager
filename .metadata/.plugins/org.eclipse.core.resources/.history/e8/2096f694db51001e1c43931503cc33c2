package br.com.ieoafestasedecoracoes.partymanager.companyservice.to;

import java.util.ArrayList;
import java.util.List;

import br.com.ieoafestasedecoracoes.partymanager.companyservice.domain.Company;
import jakarta.persistence.Transient;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@AllArgsConstructor
@NoArgsConstructor
@Data
public class CompanyTO {

	private Integer id;
	private String name;
	private String document;
	
	@Transient
	List<ClientTO> clients = new ArrayList<>();
	
	@Transient
	List<VendorTO> vendors = new ArrayList<>();
	
	public CompanyTO(Company company) {
		if(company != null) {
			this.id = company.getId();
			this.name = company.getName();
			this.document = company.getDocument();			
		}
	}
	
	public static List<CompanyTO> fromCompanyList(List<Company> list) {
		return list.stream().map(CompanyTO::new).toList();
	}
	
}
